.authform
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
    %h3 Logowanie
    = devise_error_messages!
    .form-group
      -# - if devise_mapping.registerable?
      -#   = link_to 'Utwórz konto', new_registration_path(resource_name), class: 'right'
      = f.label :email
      = f.email_field :email, :autofocus => true, class: 'form-control'
    .form-group
      -# - if devise_mapping.recoverable?
      -#   = link_to "Zapomniałeś hasło?", new_password_path(resource_name), class: 'right'
      = f.label :password
      = f.password_field :password, class: 'form-control'
    = f.submit 'Zaloguj', :class => 'button right'
    - if devise_mapping.rememberable?
      .checkbox{:style => "width:150px; margin-top:10px;"}
        %label
          = f.check_box :remember_me
          Zapamiętaj mnie
