.authform
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f|
    %h3 Zapomniałeś hasło?
    %p Wyślemy Ci instrukcję resetowania hasła.
    = devise_error_messages!
    .form-group
      = f.label :email
      = f.email_field :email, :autofocus => true, class: 'form-control'
    = f.submit 'Zresetuj hasło', :class => 'button right'
